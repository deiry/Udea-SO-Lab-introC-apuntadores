    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Iniciar",
            "type": "cppdbg",
            "request": "launch",
            "program": "Escriba el nombre del programa; por ejemplo, ${workspaceFolder}/a.out.",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(lldb) Adjuntar",
            "type": "cppdbg",
            "request": "attach",
            "program": "Escriba el nombre del programa; por ejemplo, ${workspaceFolder}/a.out.",
            "processId": "${command:pickProcess}",
            "MIMode": "lldb"
        },
        {
            "name": "gcc - Compilar y depurar el archivo activo",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "gcc build active file"
        }
    ]
}